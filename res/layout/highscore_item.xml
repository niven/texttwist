<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView android:id="@+id/position" android:layout_width="wrap_content"
			android:layout_height="wrap_content" style="@style/ButtonText"
			android:textSize="28sp" android:background="@drawable/letter" />

		<TextView android:id="@+id/scoretext" android:layout_width="wrap_content"
			android:layout_height="wrap_content" style="@style/ButtonText"
			android:textSize="28sp" />


		<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_gravity="center_vertical">


			<TextView android:id="@+id/scoredate" android:layout_width="wrap_content"
				android:layout_height="wrap_content" style="@style/ButtonText"
				android:textSize="20sp" android:layout_alignParentRight="true" />
		</RelativeLayout>

	</LinearLayout>
</LinearLayout>