<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.interdictor" android:versionCode="8"
	android:versionName="2.2.1">
	<uses-sdk android:minSdkVersion="7" />

	<application android:icon="@drawable/icon" android:label="@string/app_name" android:name="org.interdictor.TextTwistApplication">
		<activity android:name=".MainMenuActivity" 
			android:screenOrientation="portrait"
			>
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".TextTwistActivity"
			android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar"
			/>
		<activity android:name=".AboutActivity"
			android:screenOrientation="portrait" />
		<activity android:name=".RoundCompletedActivity"
			android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar"
			/>
		<activity android:name="org.interdictor.HighscoreActivity"
			android:screenOrientation="portrait" />

	</application>
</manifest>